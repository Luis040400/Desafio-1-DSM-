<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultEjercicio2Activity">

    <TextView
        android:id="@+id/txtNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18dp"
        android:background="@drawable/inputs_style"
        android:layout_marginVertical="5dp"
        android:text="Nombre" />
    <TextView
        android:id="@+id/txtCodigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18dp"
        android:background="@drawable/inputs_style"
        android:layout_marginVertical="5dp"
        android:text="CÃ³digo" />

    <TextView
        android:id="@+id/txtVentas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18dp"
        android:background="@drawable/inputs_style"
        android:layout_marginVertical="5dp"
        android:text="Ventas" />

    <TextView
        android:id="@+id/txtMes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18dp"
        android:background="@drawable/inputs_style"
        android:layout_marginVertical="5dp"
        android:text="Mes" />
    <TextView
        android:id="@+id/txtTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18dp"
        android:background="@drawable/inputs_style"
        android:layout_marginVertical="5dp"
        android:text="Total de Ventas" />
    <TextView
        android:id="@+id/txtPorComi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18dp"
        android:background="@drawable/inputs_style"
        android:layout_marginVertical="5dp"
        android:text="Porcentaje Comisiones" />
    <TextView
        android:id="@+id/txtComisiones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18dp"
        android:textStyle="bold"
        android:background="@drawable/inputs_style"
        android:layout_marginVertical="5dp"
        android:text="Comisiones" />

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="45dp"
        android:text="Volver" />
</LinearLayout>