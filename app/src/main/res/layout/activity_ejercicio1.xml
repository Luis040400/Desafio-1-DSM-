<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Ejercicio1">

    <EditText
        android:id="@+id/txtNombre"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginVertical="6dp"
        android:background="@drawable/inputs_style"
        android:gravity="center"
        android:inputType="textPersonName"
        android:hint="Nombre completo" />

    <EditText
        android:id="@+id/txtCodigo"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginVertical="6dp"
        android:background="@drawable/inputs_style"
        android:gravity="center"
        android:inputType="text"
        android:hint="CÃ³digo de empledo" />

    <EditText
        android:id="@+id/txtVentas"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginVertical="6dp"
        android:background="@drawable/inputs_style"
        android:gravity="center"
        android:hint="Total de ventas"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Seleccione el mes" />

    <Spinner
        android:id="@+id/idSpinner"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_marginVertical="6dp"
        android:background="@drawable/inputs_style"
        android:spinnerMode="dialog"
        android:entries="@array/meses"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="300dp"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content"
        android:text="Calcular" />

    <Button
        android:id="@+id/button1"
        android:layout_width="300dp"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="Mostrar Resultados" />

    <Button
        android:id="@+id/btnEj1Volver"
        android:layout_width="300dp"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content"
        android:text="Volver" />

</LinearLayout>